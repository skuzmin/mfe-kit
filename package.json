{
  "name": "mfe-kit",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "build": "rm -rf dist && npm run build:utils && npm run build:plugins",
    "build:utils": "npm run build --workspace=@mfe-kit/utils",
    "build:plugins": "npm run build --workspace=@mfe-kit/plugins",
    "lint": "eslint packages/**/src",
    "check": "prettier --ignore-path .gitignore --check packages/**/src",
    "check:fix": "prettier --ignore-path .gitignore --write packages/**/src && eslint --fix packages/**/src"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "vite": "^6.3.5",
    "esbuild": "^0.25.8",
    "husky": "^9.1.7"
  }
}
